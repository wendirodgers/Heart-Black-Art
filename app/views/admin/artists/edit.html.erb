<h1>Admin::Artists#edit</h1>
<%= form_for @artist, url: admin_artist_path do |f| %>
  <%= flash[:errors] %>
  name: <%= f.text_field :name %>
  gender: <%= f.text_field :gender %>
  age: <%= f.text_field :age %>
  location: <%= f.text_field :location %>
  instagram: <%= f.text_field :instagram %>
  facebook: <%= f.text_field :facebook %>
  tumblr: <%= f.text_field :tumblr %>
  twitter: <%= f.text_field :twitter %>
  website: <%= f.text_field :website %>
  <% if @artist.image.attached? %>
    <%= image_tag @artist.image %>
  <% end %>  

  image: <%= f.file_field :image %> 
  <br>
  <% Medium.all.each do |medium| %>
    <%= f.label medium.name %>
    <% if @artist.media.include? medium  %>
      <%= check_box_tag "media[]", medium.id, checked: true %>
      <br>
    <% else %>
      <%= check_box_tag "media[]", medium.id %>  
      <br>
    <% end %>  
  <% end %>
  <%= f.submit %>
<% end %>
